# ==================================================
# LUMEN - React Native App Environment Variables
# ==================================================
# Copy this file to .env and configure with your values
# Never commit .env file to version control

# ==================================================
# REACT NATIVE NEW ARCHITECTURE (CURRENTLY USED)
# ==================================================
# Enable React Native's New Architecture features
REACT_NATIVE_USE_NEW_ARCHITECTURE=1
USE_FABRIC=1
USE_TURBOMODULE=1

# ==================================================
# FUTURE CONFIGURATION OPTIONS
# ==================================================
# Uncomment and configure these variables when needed

# ==================================================
# API CONFIGURATION
# ==================================================
# CoinGecko API Configuration (currently hardcoded in api-service.ts)
# API_BASE_URL=https://api.coingecko.com/api/v3
# API_TIMEOUT=10000

# Rate Limiting Configuration (prevents API throttling)
# API_RATE_LIMIT_MAX_REQUESTS=8
# API_RATE_LIMIT_WINDOW_MS=60000
# API_BURST_MAX_REQUESTS=2
# API_BURST_WINDOW_MS=10000

# Cache Configuration (in milliseconds)
# API_CACHE_TTL_CRYPTO_LIST=600000
# API_CACHE_TTL_CRYPTO_DETAIL=900000
# API_CACHE_TTL_SEARCH=1800000

# ==================================================
# GOOGLE SIGN-IN CONFIGURATION
# ==================================================
# Get these values from Google Cloud Console
# https://console.cloud.google.com/
# GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here
# GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id_here
# GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id_here

# ==================================================
# DEVELOPMENT CONFIGURATION
# ==================================================
# Development and debugging features
# DEBUG_MODE=true
# ENABLE_FLIPPER=true
# ENABLE_ANALYTICS=false

# Testing Configuration
# ENABLE_MOCK_API=false
# TEST_USER_EMAIL=test@example.com

# ==================================================
# ANALYTICS & MONITORING
# ==================================================
# Analytics service configuration (optional)
# ANALYTICS_ENABLED=false
# ANALYTICS_API_KEY=your_analytics_key_here

# Error reporting (optional)
# ERROR_REPORTING_ENABLED=false
# ERROR_REPORTING_API_KEY=your_error_reporting_key_here

# ==================================================
# CAMERA & QR SCANNER CONFIGURATION
# ==================================================
# QR Scanner timeout (in seconds)
# QR_SCANNER_TIMEOUT=30
# QR_SCANNER_DEBOUNCE_DELAY=1500

# Camera permission education
# SHOW_CAMERA_PERMISSION_EDUCATION=true

# ==================================================
# SECURITY CONFIGURATION
# ==================================================
# Encrypted storage configuration
# STORAGE_ENCRYPTION_KEY=your_encryption_key_here

# Session configuration (in milliseconds)
# SESSION_TIMEOUT=3600000
# TOKEN_REFRESH_THRESHOLD=300000

# ==================================================
# FEATURE FLAGS
# ==================================================
# Enable/disable app features
# FEATURE_EXCHANGE_ENABLED=true
# FEATURE_QR_SCANNER_ENABLED=true
# FEATURE_HISTORY_ENABLED=true
# FEATURE_ANALYTICS_ENABLED=true

# ==================================================
# BUILD CONFIGURATION
# ==================================================
# Build-specific settings
# BUILD_VERSION=0.0.1
# BUILD_NUMBER=1

# Platform specific settings
# IOS_BUNDLE_ID=com.yourcompany.lumen
# ANDROID_PACKAGE_NAME=com.yourcompany.lumen